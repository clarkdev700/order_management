@model OpticaVL.Models.Marque
@{
    ViewBag.Title = "Marque";
}

@section NavigationTitle{
    Marque
}

@section filedeNavigation{
    <li><a href="#" class="active">marque</a></li>
    <!--<li class="active">facture à solder</li>-->
}

<div class="row">
    <div class="col-lg-2"></div>
    <div class="col-lg-5">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            <div class="row">
                @Html.ValidationSummary(true)
            </div>
            <div class="row">
                <div class="form-group">
                    @Html.Label("Libellé") @Html.ValidationMessage("Libelle", new { @class="text-danger"})
                    @Html.TextBox("Libelle", @Model.Libelle, new { @class = "form-control" })
                </div>
                <div class="form-group">
                    <button type="submit" class="btn">Valider</button>
                    <a href="@Url.RouteUrl("_listeMarque")" class="btn">Annuler</a>
                </div>
            </div>
        }
    </div>
    <div class="col-lg-5"></div>
</div>


@section scripts{
@Scripts.Render("~/bundles/jqueryval")
    <script type="text/javascript">
        $("#Parametre").addClass("active");
        $("#marque").addClass("active");
    </script>
    }
