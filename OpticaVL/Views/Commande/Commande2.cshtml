            type: "GET",
            data: { tv: tv, gv: gv },
            dataType: 'json',
            success: function (d) {
                if (side == "OG") {
                    vm.OGAdd.removeAll();
                    vm.OGAxe.removeAll();
                    vm.OGCycl.removeAll();
                    vm.OGSph.removeAll();
                } else {
                    vm.ODAdd.removeAll();
                    vm.ODAxe.removeAll();
                    vm.ODCycl.removeAll();
                    vm.ODSph.removeAll();
                }
                if (d.length > 0) {
                    $.each(d, function (index, val) {
                        if (side == "OD") {
                            AddPuissance(vm.ODAdd(), vm.ODAdd, val.Add);
                            AddPuissance(vm.ODAxe(), vm.ODAxe, val.Axe);
                            AddPuissance(vm.ODCycl(), vm.ODCycl, val.Cycl);
                            AddPuissance(vm.ODSph(), vm.ODSph, val.Sph);
