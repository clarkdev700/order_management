                            AddPuissance(vm.OGAxe(), vm.OGAxe, val.Axe);
                            AddPuissance(vm.OGCycl(), vm.OGCycl, val.Cycl);
                            AddPuissance(vm.OGSph(), vm.OGSph, val.Sph);
                        }
                    });
                }

            },
            error: function () { }
        });
    }



