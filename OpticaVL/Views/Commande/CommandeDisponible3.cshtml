@model  List<OpticaVL.ViewModel.ModelCommandeDispo>
@{
    ViewBag.Title = "CommandeDisponible";
}

@section NavigationTitle{
    Commande
}

@section filedeNavigation{
    <li><a href="#">commandes</a></li>
    <li class="active">liste-commande-disponible</li>
}

<div class="row">
    <table class="table table-striped table-responsive">
        <thead>
            <tr>
                <th>Date</th>
                <th>Reference</th>
                <th>Date disponible</th>
                <th>Identite client</th>
                <th>Adresse</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @if (Model.Count > 0)
            {
                foreach (var cmd in Model)
                {
                    <tr>
                        <td>@cmd.Date</td>
                        <td>
                            <span>@cmd.RefCmde</span>
                        </td>
                        <td>@cmd.DateDispo</td>
                        @*<td>@cmd.DateLivraison</td>*@
                        @{ var Identite = cmd.Client;}
                        <td>
                            <div class="row">
                                <span class=""><strong>@Identite.Nom.ToUpper()</strong></span>&nbsp;
                                <span><strong>@Identite.Prenom</strong> </span>
                            </div>
                        </td>
                        <td>
                            <address>
                                <div class="row">
                                    <!--<span class="col-xs-2">Contact :</span>-->
                                    <span>@Identite.Contact</span>
                                </div>
                                <div class="row">
                                    <!-- <span class="col-xs-2">Contact2 :</span>-->
                                    <span>@Identite.Contact2</span>
                                </div>
                                <div class="row">
                                    <!--<span class="col-xs-2">Email</span>-->
                                    <span>@Identite.Email</span>
                                </div>
                            </address>
                        </td>
                        <td>
                            <span><a href="#" title="Voir le details de la commande"><i class="glyphicon glyphicon-info-sign"></i></a></span>
                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>
</div>
@section scripts{
    <script type="text/javascript">
        $("#indexGestionCommande").addClass("active");
        $("#CommandeDispo").addClass("active");
    </script>
    }