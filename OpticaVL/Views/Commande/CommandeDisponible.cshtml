@model  List<OpticaVL.ViewModel.QCommandeModel>
@{
    ViewBag.Title = "CommandeDisponible";
}

<h2>CommandeDisponible</h2>
<div class="row">
    <table class="table table-striped table-responsive">
        <thead>
            <tr>
                <th>Date</th>
                <th>Details commande</th>
                <th>Date disponible</th>
                <th>Identite client</th>
                <th>Adresse</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @if (Model.Count > 0)
            {
                foreach (var cmd in Model)
                {
                    <tr>
                        <td>@cmd.Date</td>
                        <td>
                            @*if (cmd.DetailsCommande.Count > 0)
                            {*@
                                 <ul>
                                    @foreach (var dc in cmd.DetailsCommande)
                                    {
                                        <li>
                                            <span>Designation:</span>
                                            <span>@dc.Designation</span>
                                            <span>Marque:</span>
                                            <span>@dc.Marque</span>
                                        </li>
                                    }
                                </ul>
                            @*}*@
                           
                        </td>
                        <td>@cmd.DateLivraison</td>
                        <td>@cmd.IdentiteClient</td>
                        <td>
                            <address>
                                <span>Contact:</span>
                                <span>@cmd.Adresse.Contact</span><br />
                                <span>Contact2:</span>
                                <span>@cmd.Adresse.Contact2</span>
                                <blockquote>
                                    @cmd.Adresse.Adr
                                </blockquote>
                            </address>
                        </td>
                    </tr>
                }
            } 
        </tbody>
    </table>
</div>
