@model  List<OpticaVL.ViewModel.ModelCommande>
@{
    ViewBag.Title = "CommandeDisponible";
}

<h2>CommandeDisponible</h2>
<div class="row">
    <table class="table table-striped table-responsive">
        <thead>
            <tr>
                <th>Date</th>
                <th>Details commande</th>
               <!--<th>Date disponible</th>-->
                <th>Identite client</th>
            </tr>
        </thead>
        <tbody>
            @if (Model.Count > 0)
            {
                foreach (var cmd in Model)
                {
                    <tr>
                        <td>@cmd.Date</td>
                        <td>
                            <div class="row">
                                <span class="col-xs-3"><strong>Monture :</strong> </span>
                                <span>@cmd.DetailsMonture.Designation</span>
                                <span>-</span>
                                <span>@cmd.DetailsMonture.Numero</span>
                            </div>
                            <div class="row">
                                <div class="col-xs-6">
                                    @{var VerresOD = cmd.DetailsVerres.OD; }
                                    <h5>OD</h5>
                                    <div>
                                        <span class="col-xs-2"><strong>Add</strong></span>
                                        <span>@VerresOD.Add</span>
                                    </div>
                                    <div>
                                        <span class="col-xs-2"><strong>Type:</strong></span><span>@VerresOD.Type</span> &nbsp;<span>@VerresOD.GammeV</span>
                                    </div>
                                    <table class="table table-bordered table-condensed">
                                        <tr><th></th><th>Cyl</th><th>Sph</th><th>Axe</th></tr> 
                                        <tr><th>VL</th><td>@VerresOD.VL.Axe</td><td>@VerresOD.VL.Cyl</td><td>@VerresOD.VL.Sph</td></tr>
                                        <tr><th>VP</th><td>@VerresOD.VP.Axe</td><td>@VerresOD.VP.Cyl</td><td>@VerresOD.VP.Sph</td></tr>
                                    </table>
                                </div>
                                <div class="col-xs-6">
                                    @{var VerresOG = cmd.DetailsVerres.OG; }
                                    <h5>OG</h5>
                                    <div>
                                        <span class="col-xs-2"><strong>Add</strong></span>
                                        <span>@VerresOG.Add</span>
                                    </div>
                                    <div>
                                        <span class="col-xs-2"><strong>Type:</strong></span><span>@VerresOG.Type</span> &nbsp;<span>@VerresOG.GammeV</span>
                                    </div>
                                    <table class="table table-bordered table-condensed">
                                        <tr><th></th><th>Cyl</th><th>Sph</th><th>Axe</th></tr>
                                        <tr><th>VL</th><td>@VerresOG.VL.Axe</td><td>@VerresOG.VL.Cyl</td><td>@VerresOG.VL.Sph</td></tr>
                                        <tr><th>VP</th><td>@VerresOG.VP.Axe</td><td>@VerresOG.VP.Cyl</td><td>@VerresOG.VP.Sph</td></tr>
                                    </table>
                                </div>
                            </div>
                        </td>
                        @*<td>@cmd.DateLivraison</td>*@
                        @{ var Identite = cmd.Identite;}
                        <td>
                            <div class="row text-center">
                                <span class=""><strong>@Identite.Nom.ToUpper()</strong></span>&nbsp;
                                <span><strong>@Identite.Prenom</strong> </span>
                            </div>
                            <address>
                                <div class="row text-center">
                                    <!--<span class="col-xs-2">Contact :</span>-->
                                    <span>@Identite.Contact</span>
                                </div>
                                <div class="row text-center">
                                    <!-- <span class="col-xs-2">Contact2 :</span>-->
                                    <span>@Identite.Contact2</span>
                                </div>
                                <div class="row text-center">
                                    <!--<span class="col-xs-2">Email</span>-->
                                    <span>@Identite.Email</span>
                                </div>
                            </address>
                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>
</div>
