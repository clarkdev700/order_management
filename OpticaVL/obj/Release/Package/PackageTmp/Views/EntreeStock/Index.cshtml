@model List<OpticaVL.ViewModel.ProductStock>
@{
    ViewBag.Title = "Index";
}

@section NavigationTitle{
    Stock
}

@section filedeNavigation{
    <li class="active">historique de mouvement de stock</li>
}

<div class="row">
    <p>
        <a href="@Url.RouteUrl("_addStock")" class="btn btn-primary btn-sm">Ajouter</a>
    </p>
    <table class="table table-condensed table-striped table-responsive">
        <thead>
            <tr>
                <th>Date</th>
                <th>Designation</th>
                <th>Fournisseur</th>
                <th>Marque</th>
                <th>Quantite</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @if (Model.Count > 0)
            {
                foreach (var s in Model)
                {
                    <tr>
                        <td>@s.Date</td>
                        <td>@s.Designation</td>
                        <td>@s.Fournisseur</td>
                        <td>@s.Marque</td>
                        <td>@s.Qte</td>
                        <td>
                            <span><a href="#"><i class="glyphicon glyphicon-edit"></i></a></span>@*@Url.RouteUrl("_updateStock", new { id = s.Id})*@ |
                            <span><a href="#" class="text-danger"><i class="glyphicon glyphicon-remove-circle"></i></a></span>
                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>
</div>
@section scripts {
    <script type="text/javascript">
        $("#Stock").addClass("active");
        $("#mouvementStock").addClass("active");
    </script>
    }