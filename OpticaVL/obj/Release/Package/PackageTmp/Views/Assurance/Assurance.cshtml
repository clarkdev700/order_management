@model OpticaVL.Models.Assurance
@{
    ViewBag.Title = "Assurance";
}

@section NavigationTitle{
    Assurance
}

@section filedeNavigation{
    <li><a href="#" class="active">assurance</a></li>
    <!--<li class="active">facture à solder</li>-->
}

@section headerStyle{
    @Styles.Render("~/Content/css__")
}

<div class="row">
    <div class="col-lg-2"></div>
    <div class="col-lg-5">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            <div class="row">
                @Html.ValidationSummary(true)
            </div>
            <div class="row">
                <div class="form-group">
                    @Html.Label("Code") @Html.ValidationMessage("Code", new { @class="text-danger"}) 
                    @Html.TextBox("Code", @Model.Code, new { @class = "form-control" })
                    
                </div>
                <div class="form-group">
                    @Html.Label("Nom") @Html.ValidationMessage("Nom", new { @class="text-danger"})
                    @Html.TextBox("Nom", @Model.Nom, new { @class = "form-control" })
                    
                </div>
                <div class="form-group">
                    <button type="submit" class="btn">Valider</button>
                    <a href="@Url.RouteUrl("_ListeAssurance")" class="btn">Annuler</a>
                </div>
            </div>
        }
    </div>
</div>

@section scripts{
@Scripts.Render("~/bundles/jqueryval")
    <script type="text/javascript">
        $("#Parametre").addClass("active");
        $("#assurance").addClass("active");
    </script>
    }